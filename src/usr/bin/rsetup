#!/bin/bash

if (( EUID != 0 ))
then
    exec sudo "$0" "$@"
fi

set -euo pipefail
shopt -s nullglob

LC_ALL="C"
LANG="C"
LANGUAGE="C"

DEBUG="${DEBUG:-false}"

source "/usr/lib/rsetup/cli/main.sh"

if (( $# == 0 )) || [[ $1 == main ]]
then
    source "/usr/lib/rsetup/tui/main.sh"
    tui_start __tui_main
else
    __parameter_type_check "$1" "function"

    "$@"
fi
