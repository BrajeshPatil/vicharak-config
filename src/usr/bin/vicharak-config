#!/usr/bin/env bash
# shellcheck disable=SC1090

set -euo pipefail
shopt -s nullglob

LC_ALL="C"
LANG="C"
LANGUAGE="C"

DEBUG="${DEBUG:-false}"

if git status &>/dev/null && [[ -f "$PWD/src/usr/bin/vicharak-config" ]]; then
	ROOT_PATH="${ROOT_PATH:-"$PWD"}/src"
else
	ROOT_PATH="${ROOT_PATH:-}"
fi

source "$ROOT_PATH/usr/lib/vicharak-config/cli/main.sh"

VICHARAK_CONFIG_EXEC_NAME="$(basename "$0")"
if (($# == 0)) && [[ "$VICHARAK_CONFIG_EXEC_NAME" == "vicharak-config" ]]; then
	if ((EUID != 0)); then
		if [[ -n "${DISPLAY:-}" ]]; then
			exec pkexec "$0" "$@"
		else
			exec sudo "$0" "$@"
		fi
	fi
	source "$ROOT_PATH/usr/lib/vicharak-config/tui/main.sh"
	tui_start __tui_main
else
	if [[ "$VICHARAK_CONFIG_EXEC_NAME" == "vicharak-config" ]]; then
		__parameter_type_check "$1" "function"
		"$@"
	else
		__parameter_type_check "__$VICHARAK_CONFIG_EXEC_NAME" "function"
		"__$VICHARAK_CONFIG_EXEC_NAME" "$@"
	fi

fi
